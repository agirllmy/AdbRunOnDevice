<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入电视IP地址"
        android:textSize="18sp"/>
    <EditText
        android:id="@+id/alibaba_device_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tips"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:inputType="number"/>
    <Button
        android:id="@+id/alibaba_install"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alibaba_device_ip"
        android:textSize="16sp"
        android:text="安装"
        android:layout_marginTop="10dp"/>
    <WebView
        android:id="@+id/upload_page"
        android:layout_below="@id/alibaba_install"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/upload_result"
        android:layout_width="match_parent"
        android:layout_below="@id/alibaba_install"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>

</RelativeLayout>
